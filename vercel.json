{
  "version": 2,
  "name": "bablit",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/webhook/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/health",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "GOOGLE_TRANSLATE_API_KEY": "@google_translate_api_key",
    "DEEPL_API_KEY": "@deepl_api_key",
    "WEBHOOK_SECRET": "@webhook_secret",
    "NODE_ENV": "production"
  }
}
