{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/demo",
      "dest": "/public/demo.html"
    },
    {
      "src": "/claude",
      "dest": "/api/claude"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
} 